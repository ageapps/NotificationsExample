<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="es.age.apps.notificationexample.MainActivity">

        <TextView
            android:id="@+id/hello_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications Example!" />

        <Button
            android:id="@+id/default_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hello_text"
            android:layout_centerHorizontal="true"
            android:text="Send Notification"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/expanded_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/default_notification"
            android:layout_centerHorizontal="true"
            android:text="Send Expanded Notification"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/action_buttons_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expanded_notification"
            android:layout_centerHorizontal="true"
            android:text="Send Action Buttons Notification"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/big_text_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/action_buttons_notification"
            android:layout_centerHorizontal="true"
            android:text="Send Big Text Notification"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/special_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/big_text_notification"
            android:layout_centerHorizontal="true"
            android:text="Send Notification to Special Activity"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/progress_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/special_notification"
            android:layout_centerHorizontal="true"
            android:text="Send Progress Notification"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/media_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_notification"
            android:layout_centerHorizontal="true"
            android:text="Send Media Notification"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/custom_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/media_notification"
            android:layout_centerHorizontal="true"
            android:text="Send Custom Notification"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/expanded_action_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_notification"
            android:layout_centerHorizontal="true"
            android:text="Send Expanded Action Notification"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>
        <Button
            android:id="@+id/image_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expanded_action_notification"
            android:layout_centerHorizontal="true"
            android:text="Send Image Notification"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>
        <Button
            android:id="@+id/priority_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_notification"
            android:layout_centerHorizontal="true"
            android:text="Send High Priority Notification"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>

    </RelativeLayout>
</ScrollView>